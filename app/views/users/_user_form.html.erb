<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="col-md-6">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>

    <%= f.label :gender %>
    <%= f.select :gender, gender_option %>
    
    <%= f.label :education %>
    <%= f.select :education, edu_option %>

    <%= f.label :marital %>
    <%= f.select :marital, marital_option %>

    <%= f.label :nationality %>
    <%= f.text_field :nationality, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <%= f.label :bank_name %>
    <%= f.text_field :bank, class: 'form-control' %>

    <%= f.label :bank_address %>
    <%= f.text_field :bankaddress, class: 'form-control' %>
    
    <%= f.label :bank_account_number %>
    <%= f.text_field :bankaccount, class: 'form-control' %>

    <%= f.label :phone %>
    <%= f.text_field :tel, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>